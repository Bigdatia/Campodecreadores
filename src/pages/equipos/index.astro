---
import { Image } from "astro:assets"

import Typography from "@/components/Typography.astro"
import { PLAYERS } from "@/consts/boxers"
import { TEAMS } from "@/consts/combats"
import Layout from "@/layouts/Layout.astro"

export const prerender = true
---

<Layout
	description={"Todos los equipos de Campo de Creadores"}
	title={"Equipos - Campo de Creadores"}
>
	<main class="flex min-h-screen flex-col items-center text-[#b4cd02]">
		<div class="mx-auto w-full max-w-6xl p-8">
			<Typography
				class="title mb-12 -skew-y-6 text-wrap text-center text-6xl"
				color="primary"
				as="h1"
				variant="atomic-title"
			>
				equipos<br />
			</Typography>

			<ul class="grid w-full grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
				{
					TEAMS.map((team) => {
						const captain = PLAYERS.find((p) => p.id === team.captainId)
						if (!captain) return null

						return (
							<li class="col-span-1">
								<a
									class="group relative block transform-gpu overflow-hidden rounded-xl transition-transform hover:scale-105"
									href={team.url}
									target="_blank"
									rel="noopener noreferrer"
									title={`Ir a la página del equipo ${team.name}`}
								>
									<Image
										src={captain.image}
										alt={`Capitán del equipo ${team.name}: ${captain.name}`}
										width={400}
										height={500}
										class="aspect-[4/5] w-full object-cover transition-transform duration-300 group-hover:scale-110"
									/>
									<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
									<div class="absolute bottom-0 left-0 p-6">
										<Typography as="h3" variant="h3" color="white" class="uppercase">
											{team.name}
										</Typography>
									</div>
								</a>
							</li>
						)
					})
				}
			</ul>
		</div>
	</main>
</Layout>

<style>
	@media (width <= 320px) {
		.title {
			font-size: 2.75rem;
		}
	}
</style>
